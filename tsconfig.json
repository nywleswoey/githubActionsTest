{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDirs": ["./src"],
    "baseUrl": "./src",
    "typeRoots": ["node_modules/@types"],
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "ts-node": { "require": ["tsconfig-paths/register"] }
}
